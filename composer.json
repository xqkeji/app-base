{
    "name": "xqkeji/xq-app-base",
    "description": "一个基于新齐低代码开发框架后台管理的基础管理模块，是整个后台管理系统的核心模块。",
    "type": "library",
    "license": "SSPL-1.0",
    "autoload": {
        "psr-4": {
            "xqkeji\\app\\base\\": "src/"
        }
    },
    "authors": [
        {
            "name": "xqkeji.cn"
        }
    ],
    "require": {
        "twbs/bootstrap": "^5.2"
    },
    "extra": {
        "post-package-install":[
            {
                "cmd":["xqkeji\\composer\\Asset","rmDir"],
                "param":["www/assets/bootstrap/"]
            },
            {
                "cmd":["xqkeji\\composer\\Asset","copyDir"],
                "param":["vendor/twbs/bootstrap/dist/","www/assets/bootstrap/"]
            },
            {
                "cmd":["xqkeji\\composer\\App","addModule"],
                "param":["base","vendor/xq-app-base/src"]
            }
        ],
        "post-package-update":[
            {
                "cmd":["xqkeji\\composer\\Asset","rmDir"],
                "param":["www/assets/bootstrap/"]
            },
            {
                "cmd":["xqkeji\\composer\\Asset","copyDir"],
                "param":["vendor/twbs/bootstrap/dist/","www/assets/bootstrap/"]
            }
        ],
        "post-package-uninstall":[
            {
                "cmd":["xqkeji\\composer\\Asset","rmDir"],
                "param":["www/assets/bootstrap/"]
            },
            {
                "cmd":["xqkeji\\composer\\Asset","copyDir"],
                "param":["vendor/twbs/bootstrap/dist/","www/assets/bootstrap/"]
            },
            {
                "cmd":["xqkeji\\composer\\App","removeModule"],
                "param":["base"]
            }
        ]
    }
}
